name:                npt-gemini
version:             0.1.0.0
synopsis:            Application for importing data from Gemini
-- description:         
license:             OtherLicense
license-file:        LICENSE
author:              Vlad Bylenko
maintainer:          kromgart@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10


executable npt-gemini-import
  main-is :            Main.hs
  hs-source-dirs:      src

  other-modules:       NPT.Gemini.Internal
                     , NPT.Gemini.Types
                     , NPT.Gemini.Client
                     , NPT.Gemini.Configuration
                     , NPT.Gemini.Import.ArgsHandler
                     , NPT.Gemini.Import.Projects
                     , NPT.Gemini.Import.TimeReports


  build-depends:       base >=4.9 && <4.10
                     , http-client >=0.5.7 && < 0.6
                     , servant == 0.12
                     , servant-client == 0.12
                     , transformers >= 0.5.2 && < 0.6
                     , text >= 1.2 && < 1.3
                     , time >= 1.6 && < 1.7
                     , aeson >= 1.2.1 && < 1.3
                     , npt-core == 0.1.0.0
                     , hasql >=1 && < 1.1
                     , bytestring >= 0.10.8 && < 0.11

  default-language:    Haskell2010
  ghc-options:         -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates -Wmissing-import-lists

